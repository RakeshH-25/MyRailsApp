<% if line_item == @current_item %>
  <tr class="current_item" id="list-<%=line_item.id%>">
<% else %>
  <tr id="list-<%=line_item.id%>">
<% end %>
  <td><%= line_item.quantity %>&times;</td>
  <td><%= line_item.product.title %>-</td>
  <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
  <td>
    <%if @current_user%>
    <%= link_to 'Remove', line_item, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
    <%end%>
  </td>
</tr>