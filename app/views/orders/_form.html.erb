<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name , :value => @current_user.profile.name, :class => "form-control"%>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, :value => @current_user.email, :class => "form-control", disabled: true %>
  </div>
  <div class="field">
    <%= f.label :contact_no %><br>
    <%= f.text_field :contact_no, :value => @current_user.profile.contact_no, :class => "form-control", maxlength: 10 %>
  </div>
  <div class="field">
    <%= f.label :pay_type %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES,
prompt: 'Select a payment method' %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address, :value => @current_user.profile.address, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, :value => session[:user_id]%>
  </div>
  <hr>
  <div class="actions">
    <%= f.submit "Confirm order", :class => "form-control btn-success"%>
  </div>
<% end %>
